<h3 class="user-notice">If you are a returning user, please log in below:</h3>

<div class="login-container">
 <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value.capitalize %>!</div>
 <% end %>

<%= form_tag login_path do %>
  <p><%= label_tag :username %></p>
  <p><%= text_field_tag :username, nil, placeholder: "123example" %></p>

  <p><%= label_tag :password %></p>
  <p><%= password_field_tag :password %></p>

  <%= submit_tag "Log Me In", class: "button" %>
  <% end %>
</div>
